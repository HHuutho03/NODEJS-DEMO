<div class="mt-4">
    <h3>Đăng khóa học</h3>

    <form method="POST" action="/course/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="decription">Mô tả</label>
            <input type="text" class="form-control" id="decription" name="decription">
        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" id="videoID" name="videoID">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>